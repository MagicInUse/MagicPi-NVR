{
  "name": "pi-cam-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Secure wireless camera system host server for Raspberry Pi 5",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:frontend": "cd ../client && npm run build",
    "build:deploy": "npm run build:frontend && npm run build && npm run copy:frontend",
    "copy:frontend": "powershell -Command \"if (Test-Path 'dist/client') { Remove-Item -Recurse -Force 'dist/client' }; Copy-Item -Recurse '../client/dist' 'dist/client'\"",
    "setup:certs": "powershell -ExecutionPolicy Bypass -File generate-certs.ps1",
    "start": "node dist/server.js",
    "start:dev": "npm run setup:certs && npm run start",
    "dev": "nodemon src/server.ts",
    "clean": "rm -rf dist",
    "prestart": "npm run build"
  },
  "keywords": [
    "raspberry-pi",
    "camera",
    "surveillance",
    "websocket",
    "esp32"
  ],
  "author": "MagicInUse",
  "license": "MIT",
  "dependencies": {
    "@homebridge/ciao": "^1.3.4",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "node-cron": "^3.0.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/node": "^20.8.0",
    "@types/node-cron": "^3.0.8",
    "@types/ws": "^8.5.5",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
